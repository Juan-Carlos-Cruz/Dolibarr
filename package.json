{
  "name": "dolibarr-orthogonal-testing",
  "version": "1.0.0",
  "description": "Suite de pruebas funcionales de productos en Dolibarr con Selenium WebDriver, captura de video y evidencia",
  "main": "index.js",
  "scripts": {
    "test": "node tests/product-functional-suite.js",
    "start": "node tests/product-functional-suite.js",
    "docker-up": "docker-compose up -d",
    "docker-down": "docker-compose down",
    "docker-logs": "docker-compose logs -f",
    "setup": "npm install && npm run docker-up && echo 'Esperando 30 segundos...' && sleep 30 && npm test",
    "clean": "docker-compose down -v && docker system prune -f"
  },
  "keywords": [
    "selenium",
    "dolibarr",
    "functional-testing",
    "black-box-testing",
    "video-recording",
    "edge-webdriver"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "fs-extra": "^11.1.1",
    "selenium-webdriver": "^4.15.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  }
}
