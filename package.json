{
  "name": "dolibarr-orthogonal-testing",
  "version": "1.0.0",
  "description": "Pruebas funcionales automatizadas para Dolibarr con Selenium WebDriver y Microsoft Edge",
  "main": "index.js",
  "scripts": {
    "test": "jest --runInBand",
    "start": "node corrected-orthogonal-runner.js",
    "verify": "node verify-compatibility.js",
    "docker-up": "docker-compose up -d",
    "docker-down": "docker-compose down",
    "docker-logs": "docker-compose logs -f",
    "setup": "npm install && npm run docker-up && echo 'Esperando 30 segundos...' && sleep 30 && npm run verify",
    "clean": "docker-compose down -v && docker system prune -f"
  },
  "keywords": [
    "selenium",
    "dolibarr",
    "functional-testing",
    "jest",
    "edge"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "fs-extra": "^11.1.1",
    "selenium-webdriver": "^4.15.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  }
}
